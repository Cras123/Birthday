<% layout("/layouts/boilerplate") %>

<div class="home-wrapper">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-text">
      <h1>Celebrate Every Moment with Joy!</h1>
      <p>Capture and celebrate birthdays in the most memorable way possible.</p>
      <a href="/listings/new" class="btn btn-primary hero-btn"
        >Create a New Birthday Listing</a
      >
    </div>
  </section>

  <!-- Happy Gesture Section -->
  <section class="happy-gestures container mt-5 content">
    <h2 class="text-center">Spread Joy and Happiness</h2>
    <div class="row mt-4">
      <div class="col-md-4 text-center">
        <img
          src="/images/smiles.png"
          class="gesture-img"
          alt="Birthday Smile"
        />
        <h4 class="mt-3">Birthday Smiles</h4>
        <p>From ear-to-ear smiles that make the day unforgettable!</p>
      </div>
      <div class="col-md-4 text-center">
        <img
          src="/images/laughter_and_love.png"
          class="gesture-img"
          alt="Birthday Laughter"
        />
        <h4 class="mt-3">Laughter & Love</h4>
        <p>Laughter fills the air, making every moment special.</p>
      </div>
      <div class="col-md-4 text-center">
        <img src="/images/hugs.png" class="gesture-img" alt="Birthday Hugs" />
        <h4 class="mt-3">Hugs of Happiness</h4>
        <p>The warmth of a hug makes every birthday brighter!</p>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="call-to-action bg-light py-5 content">
    <div class="container text-center">
      <h2>Ready to Spread More Joy?</h2>
      <p>Share your happiest moments and let us help you celebrate in style.</p>
      <a href="/listings" class="btn btn-secondary"
        >Explore Birthday Listings</a
      >
    </div>
  </section>

  <!-- Footer (this will be included from the layout) -->
</div>
