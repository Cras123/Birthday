<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Birthday Listing</h3>
    <form action="/listings" method="POST" enctype="multipart/form-data">
      <!-- Title Input -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          type="text"
          id="title"
          placeholder="Add a Catchy Title"
          class="form-control"
          required
        />
      </div>

      <!-- Description Input -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          class="form-control"
          id="description"
          placeholder="Describe anything short and sweet..."
          required
        ></textarea>
      </div>

      <!-- Image Upload Input -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          name="image"
          type="file"
          accept="image/*"
          class="form-control"
          id="image"
          required
        />
      </div>

      <!-- Price and Country Inputs -->
      <div class="row">
        <!-- Price Input -->
        <div class="mb-3 col-md-8">
          <label for="money" class="form-label">Price</label>
          <input
            name="listing[money]"
            type="number"
            id="money"
            placeholder="1200"
            class="form-control"
            required
          />
        </div>

        <!-- Country Input -->
        <div class="mb-3 col-md-4">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            type="text"
            id="country"
            placeholder="Nepal"
            class="form-control"
            required
          />
        </div>
      </div>

      <!-- By (Creator) Input -->
      <div class="mb-3">
        <label for="by" class="form-label">By</label>
        <input
          name="listing[By]"
          type="text"
          id="by"
          placeholder="Who is posting this image?"
          class="form-control"
          required
        />
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
    </form>
  </div>
</div>
